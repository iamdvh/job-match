@using FPT_JOB.Models
@model List<FPT_JOB.Models.UserTypes>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>User Types</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Type</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Type</td> <!-- Hiển thị giá trị trực tiếp của Type -->
                <td>
                    <a class="btn btn-primary" asp-controller="UserTypes" asp-action="Manage" asp-route-userId="@user.UserId">Manage Types</a>
                </td>
            </tr>
        }
    </tbody>
</table>
