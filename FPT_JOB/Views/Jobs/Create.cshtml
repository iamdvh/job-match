                <span asp-validation-for="RequiredQualifications" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationDealine" class="control-label"></label>
                <input asp-for="ApplicationDealine" class="form-control" />
                <span asp-validation-for="ApplicationDealine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
